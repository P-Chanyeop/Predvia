<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="930"
             x:Class="Gumaedaehang.SourcingPage">
    
    <Grid>
        <!-- 데이터가 없을 때 보여줄 화면 (38.png 기반) -->
        <Grid x:Name="NoDataView" IsVisible="True">
            <StackPanel Spacing="60" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        MaxWidth="1200"
                        Width="1200">
                
                <!-- 필터 섹션 -->
                <StackPanel Spacing="25">
                    <TextBlock Text="필터" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               HorizontalAlignment="Left"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- 가격 입력 영역 -->
                        <StackPanel Grid.Column="0" 
                                    Orientation="Horizontal" 
                                    Spacing="20" 
                                    VerticalAlignment="Center">
                            <!-- 최소 가격 입력 -->
                            <TextBox Width="280" 
                                     Height="55" 
                                     Text="1,000"
                                     Background="#FFE5D3"
                                     BorderThickness="0"
                                     CornerRadius="8"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     FontSize="18"
                                     FontWeight="Medium"/>
                            
                            <TextBlock Text="원 ~" 
                                       VerticalAlignment="Center" 
                                       FontSize="20" 
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                            
                            <!-- 최대 가격 입력 -->
                            <TextBox Width="280" 
                                     Height="55" 
                                     Text="100,000"
                                     Background="#FFE5D3"
                                     BorderThickness="0"
                                     CornerRadius="8"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     FontSize="18"
                                     FontWeight="Medium"/>
                            
                            <TextBlock Text="원" 
                                       VerticalAlignment="Center" 
                                       FontSize="20" 
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource ForegroundBrush}"/>
                        </StackPanel>
                        
                        <!-- 설정 버튼 -->
                        <Button Grid.Column="1"
                                Content="설정" 
                                Background="#F47B20" 
                                Foreground="White" 
                                Padding="40,15" 
                                CornerRadius="8"
                                FontSize="18"
                                FontWeight="Medium"
                                BorderThickness="0"
                                Height="55"/>
                    </Grid>
                </StackPanel>
                
                <!-- 수동으로 소싱하기 섹션 -->
                <StackPanel Spacing="25">
                    <TextBlock Text="수동으로 소싱하기" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               HorizontalAlignment="Left"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- URL 입력 필드 -->
                        <TextBox Grid.Column="0"
                                 Height="55" 
                                 Watermark="URL을 입력해주세요."
                                 Background="#FFE5D3"
                                 BorderThickness="0"
                                 CornerRadius="8"
                                 VerticalContentAlignment="Center"
                                 FontSize="18"
                                 Padding="20,0"
                                 Margin="0,0,20,0"/>
                        
                        <!-- 페이징 버튼 -->
                        <Button Grid.Column="1"
                                Content="페이징" 
                                Background="#F47B20" 
                                Foreground="White" 
                                Padding="40,15" 
                                CornerRadius="8"
                                FontSize="18"
                                FontWeight="Medium"
                                BorderThickness="0"
                                Height="55"/>
                    </Grid>
                    
                    <!-- 추가하기+ 링크 -->
                    <TextBlock Text="추가하기 +" 
                               FontSize="18" 
                               Foreground="#F47B20" 
                               HorizontalAlignment="Center"
                               Cursor="Hand"
                               FontWeight="Medium"
                               x:Name="AddMoreLink"/>
                </StackPanel>
                
                <!-- 소싱제로 자동찾기 섹션 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="소싱제로 자동찾기" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               VerticalAlignment="Center"/>
                    
                    <!-- 페이징 버튼 -->
                    <Button Grid.Column="1"
                            Content="페이징" 
                            Background="#F47B20" 
                            Foreground="White" 
                            Padding="40,15" 
                            CornerRadius="8"
                            FontSize="18"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Height="55"/>
                </Grid>
                
                <!-- 메인상품 자동찾기 섹션 -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0"
                               Text="메인상품 자동찾기" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               VerticalAlignment="Center"/>
                    
                    <!-- 페이징 버튼 -->
                    <Button Grid.Column="1"
                            Content="페이징" 
                            Background="#F47B20" 
                            Foreground="White" 
                            Padding="40,15" 
                            CornerRadius="8"
                            FontSize="18"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Height="55"/>
                </Grid>
                
                <!-- 엑셀로 수출하기 섹션 -->
                <StackPanel Orientation="Horizontal" 
                            Spacing="15" 
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <!-- 엑셀 아이콘 -->
                    <Image Source="avares://Gumaedaehang/images/excel_logo.png" 
                           Width="40" 
                           Height="40"/>
                    
                    <TextBlock Text="엑셀로 수출하기" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- 테스트 버튼 (임시) -->
                <Button Content="데이터 있는 화면 보기 (테스트)" 
                        Background="#F47B20" 
                        Foreground="White" 
                        Padding="30,15" 
                        CornerRadius="8"
                        FontSize="16"
                        FontWeight="Medium"
                        HorizontalAlignment="Center"
                        Margin="0,30,0,0"
                        x:Name="TestDataButton"/>
                
            </StackPanel>
        </Grid>
        
        <!-- 데이터가 있을 때 보여줄 화면 (39.png 기반) -->
        <Grid x:Name="DataAvailableView" IsVisible="False">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Spacing="30" Margin="50,40,50,40">
                    
                    <!-- 전체선택 체크박스 -->
                    <CheckBox Content="전체선택" 
                              FontSize="16" 
                              Foreground="#333333"
                              x:Name="SelectAllCheckBox"/>
                    
                    <!-- 상품 1 -->
                    <Border Background="White" 
                            CornerRadius="12" 
                            Padding="30"
                            BorderBrush="#E5E5E5"
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- 개별 체크박스 -->
                            <CheckBox Grid.Column="0" 
                                      VerticalAlignment="Top" 
                                      Margin="0,0,20,0"
                                      x:Name="Product1CheckBox"/>
                            
                            <!-- 상품 이미지와 하단 요소들 -->
                            <StackPanel Grid.Column="1" Spacing="15">
                                <!-- 상품 카테고리 (사진과 x좌표 동일) -->
                                <TextBlock Text="전자제품 > 스마트기기" 
                                           FontSize="12" 
                                           Foreground="#888888"
                                           HorizontalAlignment="Left"/>
                                
                                <!-- 상품 이미지 -->
                                <Border Width="180" 
                                        Height="180" 
                                        Background="#F8F8F8" 
                                        CornerRadius="12"
                                        HorizontalAlignment="Left">
                                    <Image Source="avares://Gumaedaehang/images/predvia_logo.png"
                                           Stretch="Uniform"
                                           Margin="30"/>
                                </Border>
                                
                                <!-- 리뷰 (사진과 x좌표 동일) -->
                                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
                                    <TextBlock Text="리뷰 : 프레디비아3213 : 제품이 너무 좋아요" 
                                               FontSize="14" 
                                               Foreground="#666666"/>
                                    <StackPanel Orientation="Horizontal" Spacing="3">
                                        <TextBlock Text="★★★★★" FontSize="14" Foreground="#F47B20"/>
                                        <TextBlock Text="4.8" FontSize="13" Foreground="#666666" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- 타오바오 페어링 버튼 (사진과 x좌표 동일) -->
                                <Button Content="타오바오 페어링" 
                                        Background="#F47B20" 
                                        Foreground="White" 
                                        Padding="25,8" 
                                        CornerRadius="8"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        BorderThickness="0"
                                        HorizontalAlignment="Left"
                                        x:Name="TaobaoPairingButton1"/>
                                
                                <!-- 타오바오 이미지들 (처음에는 숨김) -->
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" 
                                              VerticalScrollBarVisibility="Disabled"
                                              IsVisible="False"
                                              x:Name="TaobaoImages1">
                                    <StackPanel Orientation="Horizontal" Spacing="15">
                                        <Border Width="70" Height="70" Background="#F8F8F8" CornerRadius="10">
                                            <Image Source="avares://Gumaedaehang/images/predvia_logo.png" 
                                                   Stretch="Uniform" 
                                                   Margin="10"/>
                                        </Border>
                                        <Border Width="70" Height="70" Background="#F8F8F8" CornerRadius="10">
                                            <Image Source="avares://Gumaedaehang/images/predvia_logo.png" 
                                                   Stretch="Uniform" 
                                                   Margin="10"/>
                                        </Border>
                                        <Border Width="70" Height="70" Background="#F8F8F8" CornerRadius="10">
                                            <Image Source="avares://Gumaedaehang/images/predvia_logo.png" 
                                                   Stretch="Uniform" 
                                                   Margin="10"/>
                                        </Border>
                                        <Border Width="70" Height="70" Background="#F8F8F8" CornerRadius="10">
                                            <Image Source="avares://Gumaedaehang/images/predvia_logo.png" 
                                                   Stretch="Uniform" 
                                                   Margin="10"/>
                                        </Border>
                                        <Border Width="70" Height="70" Background="#F8F8F8" CornerRadius="10">
                                            <Image Source="avares://Gumaedaehang/images/predvia_logo.png" 
                                                   Stretch="Uniform" 
                                                   Margin="10"/>
                                        </Border>
                                    </StackPanel>
                                </ScrollViewer>
                            </StackPanel>
                            
                            <!-- 상품 정보 -->
                            <StackPanel Grid.Column="2" Margin="30,0,20,0" VerticalAlignment="Top">
                                <!-- 선택키워드 -->
                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="선택키워드 :" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Foreground="#666666"
                                               Margin="0,0,0,8"/>
                                    <WrapPanel x:Name="SelectedKeywords1">
                                        <Border Background="#F47B20" CornerRadius="15" Padding="12,6" Margin="0,0,8,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="카페드345" FontSize="13" Foreground="White" FontWeight="Medium" VerticalAlignment="Center"/>
                                                <Button Grid.Column="1" Content="×" 
                                                        Background="Transparent" 
                                                        Foreground="White" 
                                                        BorderThickness="0"
                                                        Padding="0"
                                                        FontSize="16"
                                                        Width="16" Height="16"
                                                        VerticalAlignment="Center"
                                                        Margin="5,0,0,0"
                                                        x:Name="RemoveKeyword1_1"/>
                                            </Grid>
                                        </Border>
                                        <Border Background="#F47B20" CornerRadius="15" Padding="12,6" Margin="0,0,8,6">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="카페드345" FontSize="13" Foreground="White" FontWeight="Medium" VerticalAlignment="Center"/>
                                                <Button Grid.Column="1" Content="×" 
                                                        Background="Transparent" 
                                                        Foreground="White" 
                                                        BorderThickness="0"
                                                        Padding="0"
                                                        FontSize="16"
                                                        Width="16" Height="16"
                                                        VerticalAlignment="Center"
                                                        Margin="5,0,0,0"
                                                        x:Name="RemoveKeyword1_2"/>
                                            </Grid>
                                        </Border>
                                    </WrapPanel>
                                </StackPanel>
                                
                                <!-- 원상품명 -->
                                <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,0,0,15">
                                    <TextBlock Text="원상품명 :" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Foreground="#666666"/>
                                    <TextBlock Text="초코 바나나 시럽 사탕 아이스크림" 
                                               FontSize="14" 
                                               Foreground="#333333"/>
                                </StackPanel>
                                
                                <!-- 키워드 목록 -->
                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="키워드 목록 :" 
                                               FontSize="14" 
                                               FontWeight="Medium"
                                               Foreground="#666666"
                                               Margin="0,0,0,8"/>
                                    <WrapPanel x:Name="AvailableKeywords1">
                                        <Button Background="#E0E0E0" 
                                                CornerRadius="15" 
                                                Padding="12,6" 
                                                Margin="0,0,8,6"
                                                BorderThickness="0"
                                                x:Name="AddKeyword1_1">
                                            <TextBlock Text="카페드553422" FontSize="13" Foreground="#666666" FontWeight="Medium"/>
                                        </Button>
                                        <Button Background="#E0E0E0" 
                                                CornerRadius="15" 
                                                Padding="12,6" 
                                                Margin="0,0,8,6"
                                                BorderThickness="0"
                                                x:Name="AddKeyword1_2">
                                            <TextBlock Text="카페드553422" FontSize="13" Foreground="#666666" FontWeight="Medium"/>
                                        </Button>
                                        <Button Background="#E0E0E0" 
                                                CornerRadius="15" 
                                                Padding="12,6" 
                                                Margin="0,0,8,6"
                                                BorderThickness="0"
                                                x:Name="AddKeyword1_3">
                                            <TextBlock Text="카페드1" FontSize="13" Foreground="#666666" FontWeight="Medium"/>
                                        </Button>
                                    </WrapPanel>
                                </StackPanel>
                            </StackPanel>
                            
                            <!-- 우측 버튼들 -->
                            <StackPanel Grid.Column="3" VerticalAlignment="Top" Spacing="10">
                                <Button Content="삭제" 
                                        Background="#F0884B" 
                                        Foreground="White" 
                                        Width="166"
                                        Height="49"
                                        CornerRadius="16"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        BorderThickness="0"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        x:Name="DeleteProduct1"/>
                                <Button Content="상품 보류" 
                                        Background="#D4D4D4" 
                                        Foreground="Black" 
                                        Width="166"
                                        Height="49"
                                        CornerRadius="16"
                                        FontSize="14"
                                        FontWeight="Medium"
                                        BorderThickness="0"
                                        HorizontalContentAlignment="Center"
                                        VerticalContentAlignment="Center"
                                        x:Name="HoldProduct1"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- 테스트 버튼 -->
                    <Button Content="데이터 없는 화면 보기 (테스트)" 
                            Background="#F47B20" 
                            Foreground="White" 
                            Padding="30,15" 
                            CornerRadius="8"
                            FontSize="16"
                            FontWeight="Medium"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0"
                            x:Name="TestDataButton2"/>
                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
