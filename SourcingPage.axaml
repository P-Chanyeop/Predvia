<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="930"
             x:Class="Gumaedaehang.SourcingPage">
    
    <Grid>
        <!-- 데이터가 없을 때 보여줄 화면 (38.png 기반) -->
        <Grid x:Name="NoDataView" IsVisible="True">
            <StackPanel Spacing="60" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        MaxWidth="1200">
                
                <!-- 필터 섹션 -->
                <StackPanel Spacing="25" HorizontalAlignment="Center">
                    <TextBlock Text="필터" 
                               FontSize="28" 
                               FontWeight="Medium" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               HorizontalAlignment="Center"/>
                    
                    <StackPanel Orientation="Horizontal" 
                                Spacing="20" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <!-- 최소 가격 입력 -->
                        <TextBox Width="280" 
                                 Height="55" 
                                 Text="1,000"
                                 Background="#FFE5D3"
                                 BorderThickness="0"
                                 CornerRadius="8"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 FontSize="18"
                                 FontWeight="Medium"/>
                        
                        <TextBlock Text="원 ~" 
                                   VerticalAlignment="Center" 
                                   FontSize="20" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource ForegroundBrush}"/>
                        
                        <!-- 최대 가격 입력 -->
                        <TextBox Width="280" 
                                 Height="55" 
                                 Text="100,000"
                                 Background="#FFE5D3"
                                 BorderThickness="0"
                                 CornerRadius="8"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Center"
                                 FontSize="18"
                                 FontWeight="Medium"/>
                        
                        <TextBlock Text="원" 
                                   VerticalAlignment="Center" 
                                   FontSize="20" 
                                   FontWeight="Medium"
                                   Foreground="{DynamicResource ForegroundBrush}"/>
                        
                        <!-- 설정 버튼 -->
                        <Button Content="설정" 
                                Background="#F47B20" 
                                Foreground="White" 
                                Padding="40,15" 
                                CornerRadius="8"
                                FontSize="18"
                                FontWeight="Medium"
                                BorderThickness="0"
                                Height="55"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- 수동으로 소싱하기 섹션 -->
                <StackPanel Spacing="25" HorizontalAlignment="Center">
                    <TextBlock Text="수동으로 소싱하기" 
                               FontSize="28" 
                               FontWeight="Medium" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               HorizontalAlignment="Center"/>
                    
                    <StackPanel Orientation="Horizontal" 
                                Spacing="20" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <!-- URL 입력 필드 -->
                        <TextBox Width="800" 
                                 Height="55" 
                                 Watermark="URL을 입력해주세요."
                                 Background="#FFE5D3"
                                 BorderThickness="0"
                                 CornerRadius="8"
                                 VerticalContentAlignment="Center"
                                 FontSize="18"
                                 Padding="20,0"/>
                        
                        <!-- 페이징 버튼 -->
                        <Button Content="페이징" 
                                Background="#F47B20" 
                                Foreground="White" 
                                Padding="40,15" 
                                CornerRadius="8"
                                FontSize="18"
                                FontWeight="Medium"
                                BorderThickness="0"
                                Height="55"/>
                    </StackPanel>
                    
                    <!-- 추가하기+ 링크 -->
                    <TextBlock Text="추가하기 +" 
                               FontSize="18" 
                               Foreground="#F47B20" 
                               HorizontalAlignment="Center"
                               Cursor="Hand"
                               FontWeight="Medium"
                               x:Name="AddMoreLink"/>
                </StackPanel>
                
                <!-- 소싱제로 자동찾기 섹션 -->
                <StackPanel Orientation="Horizontal" 
                            Spacing="25" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="소싱제로 자동찾기" 
                               FontSize="28" 
                               FontWeight="Medium" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               VerticalAlignment="Center"/>
                    
                    <!-- 페이징 버튼 -->
                    <Button Content="페이징" 
                            Background="#F47B20" 
                            Foreground="White" 
                            Padding="40,15" 
                            CornerRadius="8"
                            FontSize="18"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Height="55"/>
                </StackPanel>
                
                <!-- 메인상품 자동찾기 섹션 -->
                <StackPanel Orientation="Horizontal" 
                            Spacing="25" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="메인상품 자동찾기" 
                               FontSize="28" 
                               FontWeight="Medium" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               VerticalAlignment="Center"/>
                    
                    <!-- 페이징 버튼 -->
                    <Button Content="페이징" 
                            Background="#F47B20" 
                            Foreground="White" 
                            Padding="40,15" 
                            CornerRadius="8"
                            FontSize="18"
                            FontWeight="Medium"
                            BorderThickness="0"
                            Height="55"/>
                </StackPanel>
                
                <!-- 엑셀로 수출하기 섹션 -->
                <StackPanel Orientation="Horizontal" 
                            Spacing="15" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <!-- 엑셀 아이콘 -->
                    <Image Source="avares://Gumaedaehang/images/excel_logo.png" 
                           Width="40" 
                           Height="40"/>
                    
                    <TextBlock Text="엑셀로 수출하기" 
                               FontSize="28" 
                               FontWeight="Medium" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
            </StackPanel>
        </Grid>
        
        <!-- 데이터가 있을 때 보여줄 화면 (39.png 기반) -->
