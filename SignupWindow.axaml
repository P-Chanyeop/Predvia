<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        Width="1920" Height="1080"
        x:Class="Gumaedaehang.SignupWindow"
        Title="PREDVIA - 회원가입"
        Background="{DynamicResource BackgroundSecondaryBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 헤더 영역 -->
        <Grid Grid.Row="0" Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 다크모드 버튼 -->
            <Button Grid.Column="0" 
                    Background="Transparent" 
                    BorderThickness="0"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse Width="24" Height="24" Fill="#FFE4D0"/>
                    <TextBlock Text="다크모드" 
                               VerticalAlignment="Center" 
                               FontSize="16" 
                               Foreground="#333333"/>
                </StackPanel>
            </Button>

            <!-- 네비게이션 버튼들 -->
            <StackPanel Grid.Column="1" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Center"
                      Orientation="Horizontal"
                      Margin="50,0,0,0"
                      Spacing="15">
                <Button Background="Transparent" 
                        BorderThickness="0"
                        x:Name="backButton">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" 
                          Fill="#333333" 
                          Width="24" 
                          Height="24"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- 메인 콘텐츠 영역 -->
        <Grid Grid.Row="1">
            <!-- 배경 삼각형 로고 (반투명) -->
            <Image Source="/images/predvia_triangle_bg.png"
                   Stretch="Uniform"
                   Width="1200"
                   Height="1200"
                   Opacity="1"
                   VerticalAlignment="Top"
                   Margin="0,-200,0,0"
                   HorizontalAlignment="Center"/>
            
            <!-- 회원가입 폼 -->
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Width="500"
                        Spacing="30">
                
                <!-- 로고 -->
                <Image Source="/images/predvia_logo.png"
                       Height="100"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
                
                <!-- 아이디 입력 필드 -->
                <Border Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="5"
                        BorderBrush="#F47B20"
                        BorderThickness="2"
                        Height="60">
                    <TextBox x:Name="usernameTextBox"
                             Watermark="아이디를 입력해주세요"
                             BorderThickness="0"
                             VerticalAlignment="Center"
                             Padding="15,0"
                             FontSize="18"
                             Background="Transparent"/>
                </Border>
                
                <!-- 비밀번호 입력 필드 -->
                <Border Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="5"
                        BorderBrush="#F47B20"
                        BorderThickness="2"
                        Height="60">
                    <TextBox x:Name="passwordTextBox"
                             Watermark="비밀번호를 입력해주세요"
                             PasswordChar="•"
                             BorderThickness="0"
                             VerticalAlignment="Center"
                             Padding="15,0"
                             FontSize="18"
                             Background="Transparent"/>
                </Border>
                
                <!-- 비밀번호 확인 입력 필드 -->
                <Border Background="{DynamicResource BackgroundBrush}"
                        CornerRadius="5"
                        BorderBrush="#F47B20"
                        BorderThickness="2"
                        Height="60">
                    <TextBox x:Name="confirmPasswordTextBox"
                             Watermark="비밀번호를 다시 입력해주세요"
                             PasswordChar="•"
                             BorderThickness="0"
                             VerticalAlignment="Center"
                             Padding="15,0"
                             FontSize="18"
                             Background="Transparent"/>
                </Border>
                
                <!-- 오류 메시지 -->
                <TextBlock x:Name="errorMessage"
                           Foreground="#E74C3C"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           IsVisible="False"/>
                
                <!-- 회원가입 버튼 -->
                <Button x:Name="signupButton"
                        Content="회원가입"
                        Background="#F47B20"
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Height="60"
                        CornerRadius="5"
                        FontSize="20"
                        FontWeight="Bold"
                        Padding="0"/>
                
                <!-- 로그인 링크 -->
                <TextBlock x:Name="loginLink"
                           Text="이미 계정이 있으신가요? 로그인"
                           HorizontalAlignment="Center"
                           Foreground="#666666"
                           FontSize="16"
                           Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
