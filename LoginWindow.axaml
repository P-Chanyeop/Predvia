<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        Width="1920" Height="1080"
        x:Class="Gumaedaehang.LoginWindow"
        Title="PREDVIA - 로그인"
        Background="#FFF8F3">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 헤더 영역 -->
        <Grid Grid.Row="0" Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 다크모드 버튼 -->
            <Button Grid.Column="0" 
                    Background="Transparent" 
                    BorderThickness="0"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse Width="24" Height="24" Fill="#FFE4D0"/>
                    <TextBlock Text="다크모드" 
                               VerticalAlignment="Center" 
                               FontSize="16" 
                               Foreground="#333333"/>
                </StackPanel>
            </Button>

            <!-- 네비게이션 버튼들 -->
            <StackPanel Grid.Column="1" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Center"
                      Orientation="Horizontal"
                      Margin="50,0,0,0"
                      Spacing="15">
                <Button Background="Transparent" 
                        BorderThickness="0">
                    <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" 
                          Fill="#333333" 
                          Width="24" 
                          Height="24"/>
                </Button>
                <Button Background="Transparent" 
                        BorderThickness="0">
                    <Path Data="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z" 
                          Fill="#333333" 
                          Width="24" 
                          Height="24"/>
                </Button>
                <Button Background="Transparent" 
                        BorderThickness="0">
                    <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" 
                          Fill="#333333" 
                          Width="24" 
                          Height="24"/>
                </Button>
                <Button Background="Transparent" 
                        BorderThickness="0">
                    <Path Data="M10,20V14H14V20H19V12H22L12,3L2,12H5V20H10Z" 
                          Fill="#333333" 
                          Width="24" 
                          Height="24"/>
                </Button>
            </StackPanel>

            <!-- 오른쪽 로그인/회원가입 버튼 -->
            <Button Grid.Column="2" 
                    Background="Transparent" 
                    BorderThickness="0"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                          Fill="#333333"
                          Width="20"
                          Height="20"/>
                    <TextBlock Text="로그인/회원가입" 
                               VerticalAlignment="Center" 
                               FontSize="16" 
                               Foreground="#333333"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- 메인 콘텐츠 영역 -->
        <Grid Grid.Row="1">
            <!-- 배경 삼각형 로고 (반투명) -->
            <Image Source="/images/predvia_triangle_bg.png" 
                   Opacity="0.15"
                   Stretch="Uniform"
                   Width="1200"
                   VerticalAlignment="Center"/>
            
            <!-- 로그인 폼 -->
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Width="500"
                        Spacing="30">
                
                <!-- 로고 -->
                <Image Source="/images/predvia_logo.png" 
                       Height="100"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
                
                <!-- 아이디 입력 필드 -->
                <Border Background="White"
                        CornerRadius="5"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        Height="60">
                    <TextBox x:Name="usernameTextBox"
                             Watermark="아이디를 입력해주세요"
                             BorderThickness="0"
                             VerticalAlignment="Center"
                             Padding="15,0"
                             FontSize="18"
                             Background="Transparent"/>
                </Border>
                
                <!-- 비밀번호 입력 필드 -->
                <Border Background="White"
                        CornerRadius="5"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        Height="60">
                    <TextBox x:Name="passwordTextBox"
                             Watermark="비밀번호를 입력해주세요"
                             PasswordChar="•"
                             BorderThickness="0"
                             VerticalAlignment="Center"
                             Padding="15,0"
                             FontSize="18"
                             Background="Transparent"/>
                </Border>
                
                <!-- 로그인 버튼 -->
                <Button x:Name="loginButton"
                        Content="로그인"
                        Background="#F47B20"
                        Foreground="White"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Height="60"
                        CornerRadius="5"
                        FontSize="20"
                        FontWeight="Bold"/>
                
                <!-- 오류 메시지 -->
                <TextBlock x:Name="errorMessage"
                           Foreground="#E74C3C"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           IsVisible="False"/>
                
                <!-- 회원가입 링크 -->
                <TextBlock x:Name="signupLink"
                           Text="아직 계정이 없으신가요? 회원가입"
                           HorizontalAlignment="Center"
                           Foreground="#666666"
                           FontSize="16"
                           Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
