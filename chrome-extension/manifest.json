{
  "manifest_version": 3,
  "name": "Predvia 네이버 쇼핑 연동",
  "version": "1.0",
  "description": "네이버 쇼핑 해외직구 자동 검색 도구",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting",
    "cookies",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://search.shopping.naver.com/*",
    "*://smartstore.naver.com/*",
    "*://*.taobao.com/*",
    "*://s.taobao.com/*",
    "*://h5api.m.taobao.com/*",
    "http://localhost:8080/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "taobao_headers",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://search.shopping.naver.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://smartstore.naver.com/*/category/50000165*"],
      "js": ["gonggu-checker.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://smartstore.naver.com/*/category/ALL*"],
      "js": ["all-products-handler.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://smartstore.naver.com/*/products/*"],
      "js": ["product-handler.js"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["*://www.taobao.com/*", "*://world.taobao.com/*", "*://login.taobao.com/*"],
      "js": ["content.js", "taobao-cookies.js", "taobao-auto-cookies.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://s.taobao.com/*"],
      "js": ["taobao-image-search.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Predvia 검색"
  }
}
