<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        Width="1920" Height="1080"
        x:Class="Gumaedaehang.MainWindow"
        Title="PREDVIA"
        Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 헤더 영역 -->
        <Grid Grid.Row="0" Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 다크모드 버튼 -->
            <Button Grid.Column="0" 
                    Background="Transparent" 
                    BorderThickness="0"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <Ellipse Width="24" Height="24" Fill="#FFE4D0"/>
                    <TextBlock Text="다크모드" 
                               VerticalAlignment="Center" 
                               FontSize="18" 
                               Foreground="#333333"/>
                </StackPanel>
            </Button>

            <!-- 중앙 로고 -->
            <StackPanel Grid.Column="1" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center">
                <Image Source="/images/predvia_logo.png" 
                       Height="40"/>
            </StackPanel>

            <!-- 오른쪽 로그인/회원가입 버튼 -->
            <Button Grid.Column="2" 
                    Background="Transparent" 
                    BorderThickness="0"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                          Fill="#333333"
                          Width="24"
                          Height="24"/>
                    <TextBlock Text="로그인/회원가입" 
                               VerticalAlignment="Center" 
                               FontSize="18" 
                               Foreground="#333333"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- 오늘의 명언 영역 -->
        <TextBlock Grid.Row="1" 
                   Text="오늘의 명언: 명언이 길어질경우 자동으로 옆으로 슬라이딩 될수있는지" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   FontSize="22"
                   Foreground="#333333"/>

        <!-- 메인 콘텐츠 영역 -->
        <Grid Grid.Row="2">
            <Border Width="1200" 
                    Height="700" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                <Grid>
                    <!-- 배경 삼각형 로고 (반투명) -->
                    <Image Source="/images/predvia_triangle_bg.png" />
                    
                    <!-- 중앙 텍스트 콘텐츠 -->
                    <StackPanel VerticalAlignment="Center" 
                                HorizontalAlignment="Center" 
                                Spacing="15">
                        <TextBlock Text="PREDVIA" 
                                   FontSize="72" 
                                   FontWeight="Bold" 
                                   Foreground="#F47B20" 
                                   HorizontalAlignment="Center"/>
                        
                        <TextBlock Text="프로그램은" 
                                   FontSize="36" 
                                   Foreground="#333333" 
                                   HorizontalAlignment="Center"/>
                        
                        <TextBlock Text="&quot;구매대행, 반자동 그 이상&quot;" 
                                   FontSize="42" 
                                   FontWeight="Bold" 
                                   Foreground="#333333" 
                                   HorizontalAlignment="Center"/>
                        
                        <!-- 여러 스타일의 텍스트를 위한 TextBlock -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <TextBlock Text="최고의 디테일로 완성된 " 
                                     FontSize="32" 
                                     Foreground="#333333"/>
                            <TextBlock Text="스마트 솔루션 프로그램" 
                                     FontSize="32" 
                                     FontWeight="Bold" 
                                     Foreground="#F47B20"/>
                            <TextBlock Text="입니다." 
                                     FontSize="32" 
                                     Foreground="#333333"/>
                        </StackPanel>
                        
                        <TextBlock Text="최고매출로 함께 나아가세요!" 
                                   FontSize="36" 
                                   Foreground="#333333" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,30,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
