<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gumaedaehang"
        mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
        Width="1920" Height="1080"
        x:Class="Gumaedaehang.MainWindow"
        Title="PREDVIA"
        Icon="Assets/predvia_logo.png"
        Background="{DynamicResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 헤더 영역 -->
        <Grid Grid.Row="0" Margin="30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="450"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="450"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽 다크모드 버튼과 정보 -->
            <StackPanel Grid.Column="0" 
                      Orientation="Horizontal" 
                      VerticalAlignment="Center"
                      Spacing="20">
                <Button Background="Transparent" 
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        x:Name="themeToggleButton">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse Width="24" Height="24" Fill="{DynamicResource DarkModeIconBrush}"/>
                        <TextBlock x:Name="themeToggleText"
                                   Text="다크모드" 
                                   VerticalAlignment="Center" 
                                   FontSize="16" 
                                   Foreground="{DynamicResource ForegroundBrush}"/>
                    </StackPanel>
                </Button>
                
                
                <Button Background="Transparent" 
                        BorderThickness="0"
                        VerticalAlignment="Center"
                        x:Name="LogButton"
                        Click="LogButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse Width="24" Height="24" Fill="#F47B20"/>
                        <TextBlock Text="작업로그" 
                                   FontSize="16" 
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush}"/>
                    </StackPanel>
                </Button>                <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                    <TextBlock Text="진여 일수:" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="7 일" 
                               FontSize="16" 
                               Foreground="#F47B20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                    <TextBlock Text="1일 액셀 추출개수:" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="20/100" 
                               FontSize="16" 
                               Foreground="#F47B20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- 중앙 로고 -->
            <Grid Grid.Column="1">
                <Image Source="/images/predvia_logo.png"
                       Height="50"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"/>
            </Grid>

            <!-- 오른쪽 사용자 정보 -->
            <Button Grid.Column="2" 
                    Background="Transparent" 
                    BorderThickness="0"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                          Fill="{DynamicResource ForegroundBrush}"
                          Width="20"
                          Height="20"/>
                    <TextBlock x:Name="userWelcomeText" 
                               VerticalAlignment="Center" 
                               FontSize="16" 
                               Foreground="{DynamicResource ForegroundBrush}"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- 오늘의 명언 영역 -->
        <Grid Grid.Row="1" 
              HorizontalAlignment="Center" 
              VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="800"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0"
                       Text="오늘의 명언: " 
                       FontSize="18"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource ForegroundBrush}"/>
            
            <!-- 슬라이딩 명언 컨테이너 -->
            <Border Grid.Column="2" 
                    Width="800" 
                    Height="30" 
                    ClipToBounds="True" 
                    VerticalAlignment="Center">
                <ScrollViewer x:Name="adviceScrollViewer"
                              HorizontalScrollBarVisibility="Hidden"
                              VerticalScrollBarVisibility="Hidden"
                              VerticalAlignment="Center">
                    <StackPanel x:Name="adviceContainer" 
                                Orientation="Horizontal" 
                                Spacing="5"
                                VerticalAlignment="Center">
                        <TextBlock x:Name="adviceText" 
                                   Text="명언을 불러오는 중..." 
                                   FontSize="18"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   TextWrapping="NoWrap"/>
                        <TextBlock Text=" - " 
                                   FontSize="18"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   IsVisible="{Binding ElementName=adviceAuthor, Path=IsVisible}"/>
                        <TextBlock x:Name="adviceAuthor" 
                                   Text="" 
                                   FontSize="18"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   TextWrapping="NoWrap"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- 구분선 -->
        <Rectangle Grid.Row="2" 
                   Fill="{DynamicResource BorderBrush}" 
                   Height="1"/>
        
        <!-- 탭 메뉴 및 메인 콘텐츠 영역 -->
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 탭 메뉴 -->
            <StackPanel Grid.Row="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Spacing="150">
                <Button x:Name="SourcingTab" 
                        Content="소싱" 
                        FontSize="20" 
                        FontWeight="Bold" 
                        Foreground="#F47B20"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10,5"
                        Cursor="Hand"/>
                <Button x:Name="MarketCheckTab" 
                        Content="마켓점검" 
                        FontSize="20" 
                        Foreground="{DynamicResource ForegroundBrush}"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10,5"
                        Cursor="Hand"/>
                <Button x:Name="MainProductTab" 
                        Content="메인상품찾기(beta)" 
                        FontSize="20" 
                        Foreground="{DynamicResource ForegroundBrush}"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10,5"
                        Cursor="Hand"/>
                <Button x:Name="SettingsTab" 
                        Content="설정" 
                        FontSize="20" 
                        Foreground="{DynamicResource ForegroundBrush}"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10,5"
                        Cursor="Hand"/>
            </StackPanel>
            
            <!-- 메인 콘텐츠 영역 -->
            <Grid Grid.Row="1">
                <!-- 홈 화면 -->
                <Grid x:Name="HomeContent">
                    <Border Width="1000" 
                            Height="600" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center">
                        <Grid>
                            <!-- 배경 삼각형 로고 (반투명) -->
                            <Image Source="/images/predvia_triangle_bg.png"
                                   Stretch="Uniform"
                                   Width="1122"
                                   Height="1121"
                                   Opacity="1"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Top"
                                   Margin="0,-300,0,0"
                                   HorizontalAlignment="Center"/>
                            
                            <!-- 중앙 텍스트 콘텐츠 -->
                            <StackPanel VerticalAlignment="Center" 
                                        HorizontalAlignment="Center" 
                                        Spacing="20">
                                <TextBlock Text="PREDVIA" 
                                           FontSize="64" 
                                           FontWeight="Bold" 
                                           Foreground="#F47B20" 
                                           HorizontalAlignment="Center"/>
                                
                                <TextBlock Text="프로그램은" 
                                           FontSize="32" 
                                           Foreground="{DynamicResource ForegroundBrush}" 
                                           HorizontalAlignment="Center"/>
                                
                                <TextBlock Text="&quot;구매대행, 반자동 그 이상&quot;" 
                                           FontSize="38" 
                                           FontWeight="Bold" 
                                           Foreground="{DynamicResource ForegroundBrush}" 
                                           HorizontalAlignment="Center"/>
                                
                                <!-- 여러 스타일의 텍스트를 위한 TextBlock -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                                    <TextBlock Text="최고의 디테일로 완성된 " 
                                             FontSize="28" 
                                             Foreground="{DynamicResource ForegroundBrush}"/>
                                    <TextBlock Text="스마트 솔루션 프로그램" 
                                             FontSize="28" 
                                             FontWeight="Bold" 
                                             Foreground="#F47B20"/>
                                    <TextBlock Text="입니다." 
                                             FontSize="28" 
                                             Foreground="{DynamicResource ForegroundBrush}"/>
                                </StackPanel>
                                
                                <TextBlock Text="최고매출로 함께 나아가세요!" 
                                           FontSize="32" 
                                           Foreground="{DynamicResource ForegroundBrush}" 
                                           HorizontalAlignment="Center" 
                                           Margin="0,25,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
                
                <!-- 소싱 화면 -->
                <ContentControl x:Name="SourcingContent" IsVisible="False">
                    <local:SourcingPage/>
                </ContentControl>
                
                <!-- 마켓점검 화면 -->
                <ContentControl x:Name="MarketCheckContent" IsVisible="False">
                    <local:MarketCheckPage/>
                </ContentControl>
                
                <!-- 마켓등록 화면 -->
                <ContentControl x:Name="MarketRegistrationContent" IsVisible="False">
                    <local:MarketRegistrationPage/>
                </ContentControl>
                
                <!-- 메인상품찾기 화면 -->
                <ContentControl x:Name="MainProductContent" IsVisible="False">
                    <local:MainProductFinderPage/> 
                </ContentControl>
                
                <!-- 설정 화면  -->
                <ContentControl x:Name="SettingsContent" IsVisible="False">
                    <local:SettingsPage x:Name="SettingsPageInstance"/>
                </ContentControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
